from thread import Thread
from .student import Student

@message
class Add:

    first: float
    second: float

@message
class Result:

    value: float

class Calculator(Thread):
    """A calculator used by the student.

    """

    student: Student

    @message_handler
    def handle_add(self, message: Add):
        print(message)
        self.student.send_result(Result(message.first + message.second))
