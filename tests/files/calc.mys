@test
def test_i8():
    x: i8 = 10

    assert_eq(x, 10)
    assert_eq(str(x), "10")

    x += 117
    assert_eq(x, 127)

    x -= 255
    assert_eq(x, -128)

    assert_eq(i8(1), 1)

@test
def test_i16():
    x: i16 = 10

    assert_eq(x, 10)
    assert_eq(str(x), "10")

    x += 32757
    assert_eq(x, 32767)

    x -= 65535
    assert_eq(x, -32768)

    assert_eq(i16(1), 1)

@test
def test_i32():
    x: i32 = 10

    assert_eq(x, 10)
    assert_eq(str(x), "10")

    x += 2147483637
    assert_eq(x, 2147483647)

    x -= 4294967295
    assert_eq(x, -2147483648)

    assert_eq(i32(1), 1)

    x = 10
    y: i32 = -2

    res: i32 = (5 + 2 * x) - 8 / y
    assert_eq(res, 29)

    res = ((5 + 2 * x) - 8) / y
    assert_eq(res, -8)

    res = 3 ** 2
    assert_eq(res, 9)

    res = 1 << 2
    assert_eq(res, 4)

    res = 4 >> 2
    assert_eq(res, 1)

    res = 1 | 8
    assert_eq(res, 9)

    res = 1 ^ 3
    assert_eq(res, 2)

    res = 1 & 3
    assert_eq(res, 1)

    res = 10 % 4
    assert_eq(res, 2)

