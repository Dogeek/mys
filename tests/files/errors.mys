@test
def test_define_variable_in_all_branches_1():
    try:
        if False:
            x = 1
        else:
            x = 2
    except GeneralError:
        try:
            x = 3
        except:
            if True:
                x = 4
            else:
                x = 5

    assert x == 2

@test
def test_system_exit_error():
    try:
        res = 0

        raise SystemExitError()
    except SystemExitError:
        res = 1

    assert res == 1
