    try:
        try:
            for i in range(5):
                print("i, a, i * a:", i, a, i * a)

            raise ValueError()
        except ValueError:
            res = 11
            # ToDo
            # print(e)
            raise

        raise TypeError()
    except ValueError:
        assert res == 11
        # ToDo
        # print(e)
        res = 12

    assert res == 12

    try:
        raise ValueError()
    except:
        res = 13
        print("Any")

    assert res == 13

    try:
        assert False
    except AssertionError:
        res = 14
        # ToDo
        # print(e)

